@{
    ViewData["Title"] = "Category Not Found";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-body">
                    <h1 class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle"></i> Category Not Found
                    </h1>
                    <p class="lead">Sorry, the category you're looking for does not exist or has been removed.</p>
                    <hr>
                    <div class="my-4">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-primary">
                            Go to category list
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>