@{
    ViewData["Title"] = "Blog Not Found";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow">
                <div class="card-body">
                    <h1 class="text-danger mb-4">
                        <i class="bi bi-exclamation-triangle"></i> Blog Not Found
                    </h1>
                    <p class="lead">Sorry, the blog post you're looking for does not exist or has been removed.</p>
                    <hr>
                    <div class="my-4">
                        <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">
                            Browse All Blogs
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>